@model List<CheckOut.Models.Checklist>

<h2>Archive</h2>
<ul>
@foreach (var checklist in Model)
{
    <li>
        <a asp-controller="Checklists" asp-action="Details" asp-route-id="@checklist.ChecklistId">
            @checklist.Title
        </a>

        <form asp-controller="Checklists" asp-action="Delete" method="post" style="display:inline;">
            <input type="hidden" name="checklistId" value="@checklist.ChecklistId" />
            <button type="submit" onclick="return confirm('Are you sure you want to delete this checklist?')">Delete</button>
        </form>
    </li>
}
</ul>